<header>
  <div class="pt-3 text-center bg-primary opacity-100" style="margin-top: 0px;">
  <h1 class="mb-1 text-light">Home</h1>
  <nav class="text-left">
    <a class="w-5 btn mt-2 mb-2 ml-2 btn-med btn-warning updateSubmit" href="/login"> Login </a>
    {{#if loggedIn}}
    <button class="logOut w-5 btn mt-2 mb-2 ml-2 btn-med btn-warning" type="submit" id="logOut">Logout</button>
    <a class="w-5 btn mt-2 mb-2 ml-2 btn-med btn-warning updateSubmit" href="/api/loggedIn/dashboard"> Dashboard </a>
    {{/if}}
  </nav>
  </div>
</header>

<section class="container">
  <div class="flex-row overflow-auto list">
    {{#each allPosts as |post|}}
    {{> post-details}}
    {{/each}}
  </div>
</section>

<!-- Functionality to view individual post only if user is logged in -->
{{#if loggedIn}}
<script src="/js/viewPost.js"></script>
{{/if}}
<script src="/js/logout.js"></script>
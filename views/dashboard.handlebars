<header id="{{user_id}}">
  <div class="pt-3 text-center bg-primary opacity-100" style="margin-top: 0px;">
  <h1 class="mb-1 text-light">My Dashboard</h1>
  <nav class="text-left">
    <a class="w-5 btn mt-2 mb-2 ml-2 btn-med btn-warning" href="/api/loggedIn">Go Back </a>
  </nav>
  </div>
</header>

<section class="container">
  <div class="flex-row overflow-auto list">
    {{#each allMyPosts as |post|}}
    {{> post-details dashboard=true}}
    {{/each}}
  </div>
</section>

<div id="newPost" class="border mt-3 w-50 border-info rounded ml-auto mr-auto mh-25 overflow-auto">
    <form class="post-form">

        <header class="h4 text-info text-center">New Post</header>
        <textarea class="form-control" rows="1" cols="15" id="newTitle" placeholder="Post Title"></textarea>
        <textarea class="form-control" rows="3" cols="15" id="newContent" placeholder="Write your post here..."></textarea>
        <button onclick="newPostHandler(event)" class="w-75 btn mt-2 mb-2 btn-med btn-primary">Post</button>

    </form>
</section>
</div>

<script src="/js/dashboard.js"></script>
<script src="/js/viewMyPost.js"></script>